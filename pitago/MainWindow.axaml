<Window 
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:controls="clr-namespace:Pitago.Controls"
  mc:Ignorable="d" Width="600" Height="450"
  x:Class="Pitago.MainWindow"
  Title="Pitago"
  ExtendClientAreaToDecorationsHint="True"
  TransparencyLevelHint="AcrylicBlur"
  Background="Transparent">

   <Window.Styles>
     <Style Selector="Button.Icon">
       <Setter Property="FontFamily" Value="avares://Pitago/Assets/Fonts/Segoe_Fluent_Icons.ttf#Segoe Fluent Icons"/>
     </Style>
   </Window.Styles> 
  
  <Grid>
    <ExperimentalAcrylicBorder IsHitTestVisible="False">
      <ExperimentalAcrylicBorder.Material>
        <ExperimentalAcrylicMaterial
            BackgroundSource="Digger"
            TintColor="Black"
            TintOpacity="1"
            MaterialOpacity="0.65" />
      </ExperimentalAcrylicBorder.Material>
    </ExperimentalAcrylicBorder>

    <DockPanel>
      <StackPanel 
        Orientation="Horizontal"
        DockPanel.Dock="Top"
        Spacing="5"
        Margin="3">
        <Button Classes="Icon" Content="" />
        <Button Classes="Icon" Content=""/>
        <Button Classes="Icon" Content=""/>
      </StackPanel>
      
      <controls:Notepad
        Margin="0"/>
    </DockPanel>
  </Grid>
    
</Window>
